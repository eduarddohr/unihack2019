@Styles.Render("~/Content/util")
@Styles.Render("~/Content/login")
@Scripts.Render("~/bundles/register")
@Styles.Render("~/Content/font-awesome")
@Styles.Render("~/Content/easy-loading")

<div class="limiter">
    <div class="container-login100" style="background-image: url('../Content/Images/map.jpeg');">
        <div class="wrap-login100 p-b-30">
            <form class="login100-form validate-form" method="post">
                <div class="login100-form-avatar">
                    <img src="~/Content/Images/marker.png" alt="AVATAR">
                </div>

                <span class="login100-form-title p-t-20 p-b-45">
                    Register as Collector
                </span>

                <div class="wrap-input100 validate-input m-b-10" data-validate="Email is required">
                    <input class="input100" id="r-name" type="text" name="email" placeholder="Name" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-10" data-validate="Email is required">
                    <input class="input100" id="r-email" type="text" name="email" placeholder="Email" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                    <input class="input100" id="r-pass" type="password" name="pass" placeholder="Password" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-10" data-validate="Confirmation is required">
                    <input class="input100" id="r-pass2" type="password" name="pass2" placeholder="Confirm Password" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>
                <div class="wrap-input100 validate-input m-b-10" data-validate="Confirmation is required">
                    <select id="r-myList" class="input100" required>
                        @foreach (var item in ViewBag.Managers)
                        {
                            <option value="@item.Id">
                                @item.FullName - @item.Area
                            </option>
                        }
                    </select>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fas fa-user-tie"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn p-t-10">
                    <button type="button" class="login100-form-btn" onclick="register()">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

