@Styles.Render("~/Content/util")
@Styles.Render("~/Content/login")
@Scripts.Render("~/bundles/add-manager")
@Styles.Render("~/Content/font-awesome")
@Styles.Render("~/Content/easy-loading")
@Styles.Render("~/Content/topnav")
<style>
    body{
        overflow:hidden;
    }
</style>
<div class="topnav" style="height:48px">
    <img src="~/Content/Images/marker.png" class="marker-shape">
    <a href="Index" class= "home">Home</a>
    <a style="width:80px" href="Managers">Managers</a>
    <a onclick="logout()" style="float:right">Logout</a>

</div>
<div class="limiter" style="margin-top:48px">
    <div class="container-login100" style="background-image: url('../Content/Images/manager.jpg');">
        <div class="wrap-login100 p-b-30">
            <form class="login100-form validate-form" method="post">
                <div class="login100-form-avatar">
                    <img src="~/Content/Images/marker.png" alt="AVATAR">
                </div>

                <span class="login100-form-title p-t-20 p-b-45">
                    Add Manager
                </span>

                <div class="wrap-input100 validate-input m-b-10" data-validate="Email is required">
                    <input class="input100" id="m-name" type="text" name="email" placeholder="Name" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-10" data-validate="Email is required">
                    <input class="input100" id="m-email" type="text" name="email" placeholder="Email" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                    <input class="input100" id="m-pass" type="password" name="pass" placeholder="Password" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-10" data-validate="Confirmation is required">
                    <input class="input100" id="m-pass2" type="password" name="pass2" placeholder="Confirm Password" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-10" data-validate="Confirmation is required">
                    <input class="input100" id="zone" type="text" name="zone" placeholder="Zone" required>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>


                <div class="container-login100-form-btn p-t-10">
                    <button type="button" class="login100-form-btn" onclick="addManager()">
                        Add
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
